<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorSecondary</item>

        <!-- Widget styles -->
        <item name="toolbarStyle">@style/ToolbarStyle</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="titleTextColor">@android:color/white</item>
    </style>

    <style name="ExtendedFAB" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="iconPadding">12dp</item>
        <item name="cornerRadius">32dp</item>
        <item name="backgroundTint">?attr/colorSecondary</item>
    </style>

</resources>
